@{
    ViewData["Title"] = "Home Page";
}

<div class="slideshow-container">
    <div class="slides-wrapper">
        <div class="mySlides active">
            <div class="numbertext">1 / 3</div>
            <img src="~/images/pormotions/peay599ca4eksbt2xn6l1ii5.png" alt="Promotion 1">
            <div class="text">Caption Text</div>
        </div>
        <div class="mySlides">
            <div class="numbertext">2 / 3</div>
            <img src="~/images/pormotions/sbu2yawcw10w7jhziuvezlax.png" alt="Promotion 2">
            <div class="text">Caption Two</div>
        </div>
        <div class="mySlides">
            <div class="numbertext">3 / 3</div>
            <img src="~/images/pormotions/sbu2yawcw10w7jhziuvezlax.png" alt="Promotion 3">
            <div class="text">Caption Three</div>
        </div>
    </div>

    <!-- Navigation buttons -->
    <button class="prev" onclick="changeSlide(-1)">&#10094;</button>
    <button class="next" onclick="changeSlide(1)">&#10095;</button>
</div>

<!-- Dots indicator -->
<div class="dots-container">
    <span class="dot active" onclick="goToSlide(1)"></span>
    <span class="dot" onclick="goToSlide(2)"></span>
    <span class="dot" onclick="goToSlide(3)"></span>
</div>

@section Scripts {
    <script src="~/js/slider.js"></script>
}