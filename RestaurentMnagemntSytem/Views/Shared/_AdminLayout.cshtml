
@{
    ViewData["Title"] = "_AdminLayoutView";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RestaurentMnagemntSytem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RestaurentMnagemntSytem.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/slider.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/output.css?v=@DateTime.Now.Ticks">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />

</head>
<body class="bg-gray-100 text-gray-900">
    <div class="flex h-screen">
        <!-- Sidebar -->
        <aside class="w-64 bg-white border p-4">
            <h2 class="text-2xl font-bold mb-6">Admin Panel</h2>
            <nav class="space-y-2">
                <a asp-controller="Admin" asp-action="Index" class="sidebar-link font-bold block px-4 py-2 rounded hover:bg-gray-200 ">Dashboard</a>
                <a asp-controller="Order" asp-action="Index" class="sidebar-link font-bold block px-4 py-2 rounded hover:bg-gray-200">Orders</a>
                <a asp-controller="Category" asp-action="Index" class="sidebar-link font-bold block px-4 py-2 rounded hover:bg-gray-200">Categories</a>
            </nav>
        </aside>

        <div class="flex-1 flex flex-col">

            <header class="bg-white shadow px-6 py-4 flex justify-between items-center">
                <h1 class="text-xl font-semibold">Dashboard</h1>
                <div class="flex items-center space-x-4">
                    <span class="text-gray-600">Hello, Admin</span>
                    <button class="px-3 py-1 bg-red-500 text-white rounded">Logout</button>
                </div>
            </header>
            <main class=" overflow-y-auto">
                @RenderBody()
            </main>
        </div>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/sidebar.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


